#criar um gráfico com a biblioteca seaborn
import seaborn as sns
sns.barplot(data=df_limpo, x='senioridade', y='salario_usd')

#Criação de gráfico mais customizado, seaborn
import matplotlib.pyplot as plt
plt.figure(figsize=(8,5))
sns.barplot(data=df_limpo, x='senioridade', y='salario_usd')
plt.title('Salario médio por senioridade')
plt.xlabel('Nível de senioridade')
plt.ylabel('Salário médio anual(USD)')
plt.show()

#Criação de um gráfico histograma
plt.figure(figsize=(8,4))
sns.histplot(df_limpo['salario_usd'], bins = 50, kde=True)
plt.title('Distribuição de salários anuais')
plt.xlabel('Salário em USD')
plt.ylabel('Frequencia')
plt.show()

#grafico boxplot,modelo1
plt.figure(figsize=(8,5))
sns.boxplot(x=df_limpo['salario_usd'])
plt.title('Boxplot salários')
plt.xlabel('Salário em USD')
plt.show()
