import pandas as pd
import numpy as np

#criado banco de dados
df_temperaturas = pd.DataFrame({
    'Dia': ["Segunda", "Ter√ßa", "Quarta", "Quinta", "Sexta"],
    'Temperatura': [30, np.nan, np.nan, 28, 27],
                                
})

#criado a aba "preenchido_ffill" e solucao para preencher os valores nulos com o ffill
df_temperaturas["prenchido_ffill"] = df_temperaturas['Temperatura'].ffill()

#criado a aba "preenchido_bfill" e solucao para preencher os valores nulos com o bfill
df_temperaturas["preenchido_bfill"] = df_temperaturas['Temperatura'].bfill()
df_temperaturas
